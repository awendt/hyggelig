xml.instruct! :xml, :version=>"1.0" 
xml.rss(:version=>"2.0"){
  xml.channel{
    xml.title(@event.name)
    xml.link(@event.permalink)
    xml.language('en-us')
      for guest in @guests
        xml.item do
          xml.title(guest.name)
          xml.description(guest.rsvp)
          xml.pubDate(guest.created_at.strftime("%a, %d %b %Y %H:%M:%S %z"))
        end
      end
  }
}
